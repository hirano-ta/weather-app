<!-- app/views/weather/index.html.erb -->
<div class="container mx-auto max-w-[960px] min-h-screen my-8 flex flex-col items-center">
  <div class="mb-4">
    <%= form_with url: weather_search_path, method: :get, local: true do |f| %>
      <div class="flex gap-2">
        <%= f.label :q, "都市名", class: "sr-only" %>
        <%= f.text_field :q, placeholder: "例: osaka", class: "border rounded p-2" %>
        <%= f.submit "検索", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>

  <% if @weather_data.present? %>
    <h1 class="text-6xl text-slate-700 my-8"><%= @weather_data[:city_name] %></h1>
    <div class="flex gap-3 px-16 py-4 bg-slate-100 rounded-lg">
      <p><%= @weather_data[:datetime] %></p>
      <p>天気：<%= @weather_data[:weather_description] %></p>
      <p>気温：<%= @weather_data[:temperature] %>℃</p>
      <p>最低：<%= @weather_data[:temperature_min] %>℃</p>
      <p>最高：<%= @weather_data[:temperature_max] %>℃</p>
      <p>湿度：<%= @weather_data[:humidity] %>%</p>
    </div>
  <% else %>
    <p class="text-2xl text-slate-700">天気情報が取得できませんでした。</p>
  <% end %>
</div>
